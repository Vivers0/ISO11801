block content
    include ../layouts/container.pug

    mixin box(title, description)
        .bg-gamma-lightGray.rounded.px-16.py-16
            .text-4xl.bg-gradient-to-r.from-cyan-400.to-pink-400.inline-block.text-transparent.bg-clip-text= title
            .font-sans.text-lg.leading-8.mt-10.text-slate-300= description

    +coloredContainer("gamma-darkGray")
        - var scope = "Область применения"
        - var purpose = "Цели"
        - var scopeText = "Область применения стандарта ISO 11801 включает рекомендации по проектированию медных и оптоволоконных кабелей, которые используются для систем связи в зданиях и центрах обработки данных. Стандарт устанавливает несколько требований к характеристикам кабельной системы, которые имеют решающее значение для достижения производительности и надежности передачи данных."
        - var purposeText = "Цель стандарта ISO 11801 - предоставить основу и руководство по проектированию кабельных систем, которые отвечают текущим и будущим потребностям организаций и отдельных лиц. Стандарт предоставляет лучшие практики для установки, тестирования и обслуживания кабельных систем, которые необходимы для эффективной коммуникации."

        .flex.flex-col.gap-16
            +box(scope, scopeText)
            +box(purpose, purposeText)
